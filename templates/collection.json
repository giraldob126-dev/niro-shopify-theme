duct-card.auto-cycle');\n  \n  function updateCardImage(card, index) {\n    try {\n        const images = JSON.parse(card.dataset.images);\n        const mainImg = card.querySelector('.main-img');\n        if (index >= images.length) index = 0;\n        card.dataset.currentIndex = index;\n        \n        mainImg.style.opacity = 0.5;\n        setTimeout(() => {\n            mainImg.src = images[index];\n            mainImg.style.opacity = 1;\n        }, 200);\n    } catch (e) {}\n  }\n\n  setInterval(() => {\n    cards.forEach(card => {\n      if (card.matches(':hover')) return; \n      let currentIndex = parseInt(card.dataset.currentIndex || 0);\n      try {\n          const images = JSON.parse(card.dataset.images);\n          let nextIndex = (currentIndex + 1) % images.length;\n          updateCardImage(card, nextIndex);\n      } catch(e) {}\n    });\n  }, 3000); \n\n  \/* --- 2. L√ìGICA DE NAVEGACI√ìN --- *\/\n  const slider = document.getElementById('productSlider');\n  const dots = document.querySelectorAll('.nav-dot');\n  \n  window.moveSlide = function(direction) {\n    const cardWidth = slider.querySelector('.product-card').offsetWidth + 15;\n    slider.scrollBy({ left: direction * cardWidth, behavior: 'smooth' });\n  };\n  \n  window.jumpToSlide = function(index) {\n    const cardWidth = slider.querySelector('.product-card').offsetWidth + 15;\n    slider.scrollTo({ left: index * cardWidth, behavior: 'smooth' });\n  };\n\n  slider.addEventListener('scroll', () => {\n    const cardWidth = slider.querySelector('.product-card').offsetWidth;\n    const scrollPos = slider.scrollLeft;\n    const index = Math.round(scrollPos \/ cardWidth);\n    dots.forEach(dot => dot.classList.remove('active'));\n    if(dots[index]) dots[index].classList.add('active');\n  });\n});\n<\/script>\n\n<style>\n  \/* --- ESTILOS GENERALES --- *\/\n  .deniro-best-sellers {\n    max-width: 1100px; margin: 60px auto; padding: 0 20px;\n    font-family: var(--font-heading-family); width: 100%; box-sizing: border-box;\n  }\n  .section-title {\n    text-align: center; font-size: 32px; font-weight: 800; margin-bottom: 45px;\n    color: #000; letter-spacing: -0.5px;\n  }\n\n  \/* --- GRID --- *\/\n  .products-grid {\n    display: flex; justify-content: center; gap: 30px; flex-wrap: wrap; width: 100%;\n  }\n\n  \/* --- TARJETA --- *\/\n  .product-card {\n    position: relative; width: 45%; max-width: 380px;\n    border-radius: 20px; \n    border: 1px solid #f0f0f0;\n    background: #fff;\n    overflow: hidden;\n    transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.4s ease;\n  }\n  .product-card:hover {\n      transform: translateY(-8px);\n      box-shadow: 0 20px 40px rgba(0,0,0,0.08);\n  }\n\n  .card-link-overlay { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 10; }\n\n  \/* --- IMAGENES --- *\/\n  .image-wrapper {\n    position: relative; height: 360px;\n    display: flex; align-items: center; justify-content: center; overflow: hidden;\n  }\n  .pink-bg { background-color: #ffeef2; }\n  .white-bg { background-color: #fafafa; }\n  \n  .image-wrapper img {\n    width: 82%; height: 82%; object-fit: contain;\n    transition: opacity 0.3s ease; position: absolute;\n    mix-blend-mode: multiply;\n  }\n  .img-front { opacity: 1; z-index: 2; }\n  .img-back { opacity: 0; z-index: 1; } \n\n  \/* --- ETIQUETA SALE --- *\/\n  .sale-tag {\n    position: absolute; bottom: 15px; left: 15px;\n    background-color: #a45ee5;\n    color: #fff;\n    font-size: 12px; font-weight: 800; padding: 7px 14px;\n    border-radius: 8px; text-transform: uppercase; z-index: 5;\n    display: flex; align-items: center; gap: 6px;\n    box-shadow: 0 4px 10px rgba(164, 94, 229, 0.3);\n  }\n\n  \/* --- INFO --- *\/\n  .product-info { padding: 25px; text-align: center; background-color: #fff; position: relative; z-index: 5; }\n  \n  .p-title { \n      font-size: 19px; font-weight: 800; color: #000; margin: 0 0 10px 0; \n      letter-spacing: -0.3px;\n  }\n  \n  .p-price { font-size: 17px; margin: 0 0 18px 0; }\n  .sale-price { color: #ff9cbd; font-weight: 800; font-size: 19px; margin-right: 8px; }\n  .old-price { \n    text-decoration: line-through; \n    color: #999; font-weight: 600; font-size: 15px;\n  }\n\n  \/* --- BOT√ìN PREMIUM (AHORA COMO ENLACE) --- *\/\n  .btn-choose {\n      display: flex; \/* Para centrar el texto *\/\n      justify-content: center;\n      align-items: center;\n      width: 100%;\n      background-color: #ffd6e8;\n      color: #000 !important; \/* Forzar negro *\/\n      text-decoration: none; \/* Quitar subrayado de link *\/\n      padding: 16px 0;\n      font-size: 15px;\n      font-weight: 800;\n      border-radius: 12px;\n      cursor: pointer;\n      position: relative;\n      overflow: hidden;\n      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); \n      box-shadow: 0 4px 6px rgba(0,0,0,0.02);\n      z-index: 20; \/* Asegurar que est√© encima del overlay *\/\n  }\n\n  \/* Brillo *\/\n  .btn-choose::after {\n      content: '';\n      position: absolute;\n      top: 0; left: -100%; width: 100%; height: 100%;\n      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);\n      transition: 0.5s;\n  }\n  \n  \/* Hover *\/\n  .btn-choose:hover {\n      background-color: #ffc2de;\n      transform: translateY(-4px) scale(1.02);\n      box-shadow: 0 10px 20px rgba(255, 194, 222, 0.6);\n      color: #000 !important;\n  }\n  .btn-choose:hover::after { left: 100%; }\n  .btn-choose:active { transform: translateY(-1px); }\n\n  \/* --- M√ìVIL --- *\/\n  @media (max-width: 768px) {\n    .deniro-best-sellers { margin: 40px auto; }\n    .products-grid {\n      display: flex; flex-wrap: nowrap; justify-content: flex-start; gap: 15px;\n      overflow-x: scroll; scroll-snap-type: x mandatory; \n      padding: 0 20px 20px 20px; \n      -ms-overflow-style: none; scrollbar-width: none;\n    }\n    .products-grid::-webkit-scrollbar { display: none; }\