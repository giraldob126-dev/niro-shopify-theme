ime();\n      const distance = countDownDate.getTime() - now;\n\n      const days = Math.floor(distance \/ (1000 * 60 * 60 * 24));\n      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) \/ (1000 * 60 * 60));\n      const minutes = Math.floor((distance % (1000 * 60 * 60)) \/ (1000 * 60));\n      const seconds = Math.floor((distance % (1000 * 60)) \/ 1000);\n\n      const d = document.getElementById(\"d-days\");\n      if(d) {\n          d.innerHTML = days < 10 ? \"0\" + days : days;\n          document.getElementById(\"d-hours\").innerHTML = hours < 10 ? \"0\" + hours : hours;\n          document.getElementById(\"d-mins\").innerHTML = minutes < 10 ? \"0\" + minutes : minutes;\n          document.getElementById(\"d-secs\").innerHTML = seconds < 10 ? \"0\" + seconds : seconds;\n      }\n    }, 1000);\n  })();\n<\/script>","color_scheme":"","padding_top":0,"padding_bottom":0}},"custom_liquid_Q9kyzC":{"type":"custom-liquid","name":"t:sections.custom-liquid.presets.name","settings":{"custom_liquid":"<div class=\"apple-promo-bar\">\n  <div class=\"apple-content\">\n    <span class=\"apple-emoji\">✨<\/span>\n    <span class=\"apple-text\">AHORRA 50% CON ENVÍO GRATIS HOY<\/span>\n    <span class=\"apple-emoji\">✨<\/span>\n  <\/div>\n<\/div>\n\n<style>\n  \/* --- BARRA ESTILO APPLE (SÚPER FINA Y ANIMADA) --- *\/\n  .apple-promo-bar {\n    \/* El truco para que se note: Un gradiente con un \"brillo\" blanco en el medio *\/\n    background: linear-gradient(90deg, #ffd6e8 0%, #ffadd6 50%, #ffd6e8 100%);\n    background-size: 200% auto;\n    \n    \/* Animación rápida y continua (flujo de brillo) *\/\n    animation: shineFlow 3s linear infinite;\n    \n    color: #000000;\n    \/* Altura reducida (Más fino) *\/\n    padding: 6px 0; \n    \n    width: 100%;\n    position: relative;\n    box-shadow: 0 1px 5px rgba(0,0,0,0.05);\n  }\n\n  .apple-content {\n    display: flex;\n    justify-content: center;\n    align-items: center;\n    gap: 8px;\n    \n    font-family: -ap